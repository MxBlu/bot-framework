{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "declaration": true,
        "paths": {
            "bot-framework/*": [ "./src/*" ]
        },
        "plugins": [
            { "transform": "typescript-transform-paths" },
            { "transform": "typescript-transform-paths", "afterDeclarations": true }
        ] 
    },
    
    "include": ["./src/**/*"]
}